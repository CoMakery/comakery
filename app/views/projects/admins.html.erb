<%= render layout: 'project_settings' do %>
  <%= render layout: 'shared/p', locals: {title: 'project owner'} do %>
    <%= "#{@project.account.decorate.name} (#{@project.account.email})" %>
  <% end %>

  <% if @admins.any? %>
    <%= render layout: 'shared/p', locals: {title: 'project admins'} do %>
      <%= render partial: "admin", collection: @admins, as: :admin, cached: true, locals: {project: @project} %>
    <% end %>
  <% end %>

  <%= form_with url: add_admin_project_path(@project), class: 'form-with-submit-button' do |f| %>
    <%= render layout: 'shared/p' do %>
      <%= f.label(:email, "add project admin") %>
      <%= f.email_field(:email, required: true, placeholder: 'Email of CoMakery user') %>
      <%= f.submit('ADD', data: {confirm: 'Add a new project admin?'}) %>
    <% end %>
  <% end %>
<% end %>
<%= render layout: 'projects/project_settings_modal' do %>
  <div class="reg-groups" data-controller="reg-group-form">
    <h2>transfer types</h2>

    <h3><%= pluralize(@transfer_types.size, 'Type', 'Types') %></h3>

    <div class="reg-groups__create">
      <% if policy(@project).transfer_types? %>
        <%= button_tag "create transfer type ï¼‹", type: 'button', class: 'reg-groups-create', data: { target: 'reg-group-form.create', action: 'reg-group-form#showForm' } %>
      <% end %>
    </div>
    
    <div class="reg-groups__groups">
      <%= render partial: "transfer_type", collection: @transfer_types, as: :transfer_type, cached: true %>
    </div>

    <%= render partial: "form" %>
  </div>
<% end %>
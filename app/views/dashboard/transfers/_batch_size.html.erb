<%= turbo_stream_from "project_transfer_batch_size" %>
<%= turbo_frame_tag "project_transfer_batch_size" do %>
  <div id="project_<%= project.id %>_transfer_batch_size"
       class="project-transfer-batch-size"
       data-bs-toggle="modal"
       data-bs-target=".project_batch_size_modal">
    <div class="input-label label-only">
      <div class="input-label-addon">Batch size</div>
    </div>
    <%= text_field_tag "project[transfer_batch_size]", project.transfer_batch_size ,
                        id: "project_transfer_batch_size_input",
                        class: "form-control",
                        readonly: true %>
  </div>
<% end %>

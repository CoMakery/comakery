<%= render layout: 'projects/project_settings_modal', locals: {back_path: project_dashboard_transfers_path(@project)} do %>
  <div class="transfers-filters">
    <h2>Transfer Transactions</h2>

    <div class="transfers-filters--filter">
      <h3>transfer</h3>

      <div class="transfers-filters--filter--options">
        <div class="transfers-filters--filter--options__active">
          #<%= @transfer.id %>
        </div>
      </div>
    </div>

    <% if @transfer.same_batch_transactables.present? %>
      <div class="transfers-filters--filter">
        <h3>batch transfers</h3>

        <div class="transfers-filters--filter--options">
          <% @transfer.same_batch_transactables.each do |transfer| %>
            <div>
              <%= link_to "##{transfer.id}", project_dashboard_transfer_path(transfer.project, transfer) %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <%= render partial: "transfer_history", locals: {transfer: @transfer} %>

  <div class="transfers-pages">
  </div>
<% end %>

<div class="transfers-table__transfer transfers-table__transfer--header">
  <label>sort by</label>
  
  <div class="transfers-table__transfer__name">
    <%= sort_link(@q, :name, 'transfer name') %>
  </div>

  <div class="transfers-table__transfer__account">
    <%= sort_link(@q, :account_first_name, [:account_first_name, :account_last_name], 'account') %>
  </div>

  <div class="transfers-table__transfer__issuer">
    <%= sort_link(@q, :issuer_first_name, [:issuer_first_name, :issuer_last_name], 'transferred by') %>
  </div>

  <div class="transfers-table__transfer__amount">
    amount <%= @project.token&.symbol ? "(#{@project.token&.symbol})" : '' %>
  </div>

  <div class="transfers-table__transfer__quantity">
    qty
  </div>

  <div class="transfers-table__transfer__total_amount">
    <%= sort_link(@q, :total_amount, @project.token&.symbol ? "total (#{@project.token&.symbol})" : 'total') %>
  </div>

  <% if @project.token %>
    <div class="transfers-table__transfer__button">
      transaction
    </div>
  <% end %>

  <div class="transfers-table__transfer__transferred_at">
    <%= sort_link(@q, :transferred_at, 'transferred at') %>
  </div>

  <div class="transfers-table__transfer__transferred_at">
    <%= sort_link(@q, :created_at, 'created at') %>
  </div>
</div>